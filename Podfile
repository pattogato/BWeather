# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'BWeather' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for BWeather
  
    # Networking
    pod 'Moya-ObjectMapper/RxSwift', '~> 2.3.1' # Includes Moya, Alamofire, ObjectMapper, RxSwift
    pod 'Kingfisher', '~> 3.6'
    
    # UI
    pod 'SVProgressHUD', '~> 2.1.2'             # Progress indicator
    
    # Dependency injection
    pod 'Swinject', '~> 2.0.0'                  # Dependency injection
    pod 'SwinjectStoryboard', '~> 1.0.0'        # DI from storyboard
    # Utils
    pod 'SnapKit', '~> 3.2.0'                   # Constraints from code
    pod 'RxOptional', '~> 3.1'                  # Includes RxSwift, RxCocoa
    pod 'CountryPicker', '~> 1.3'               # Select country from a list

  target 'BWeatherTests' do
    
    pod 'ObjectMapper', '~> 2.2.7'
    pod 'Swinject', '~> 2.0.0'
    
  end

end
